<UserControl x:Class="YouTube.Downloader.Controls.DownloadPathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <Button DockPanel.Dock="Right" Content="Browse..." Width="75"
                Margin="5, 0, 0, 0" Click="Browse_Click"/>

        <TextBlock Text="{Binding Value, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>
    </DockPanel>
</UserControl>